# Server environment sample
PORT=5002
CLIENT_URL=http://localhost:5173

# Prefer local during development. Use Atlas in production.
MONGO_URI=mongodb+srv://USERNAME:PASSWORD@cluster.mongodb.net/chatterbox?retryWrites=true&w=majority
MONGO_URI_LOCAL=mongodb://127.0.0.1:27017/chatterbox

# Auth
JWT_SECRET=change_me

# Startup behavior (fast dev)
DB_CONNECT_RETRIES=1
DB_CONNECT_INITIAL_BACKOFF_MS=500
DB_CONNECT_MAX_BACKOFF_MS=1000
DB_FALLBACK_LOCAL=true
